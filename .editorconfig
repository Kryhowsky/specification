root = true

[*]
charset=utf-8
end_of_line=lf
insert_final_newline=false
indent_style=space
indent_size=4
trim_trailing_whitespace=true

[*.md]
trim_trailing_whitespace=false

[*.json]
trim_trailing_whitespace=true
indent_style=space
indent_size=4

[{*.yml,*.yaml}]
max_line_length = 100
trim_trailing_whitespace=true
indent_style=space
indent_size=2
